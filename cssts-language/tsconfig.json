{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",
        "sourceMap": true,
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "cssts-vscode-client/src",
        "cssts-language-server/src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}