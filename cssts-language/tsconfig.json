{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "tsxdler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "cssts-language-server/src/**/*",
    "cssts-vscode-client/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
