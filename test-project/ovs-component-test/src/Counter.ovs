import { ref } from 'vue'

// OVS 视图组件
view Counter(props) {
  const count = ref(props.initial || 0)
  
  const increment = () => {
    count.value++
  }
  
  // 使用内联样式
  div(style = "padding: 16px; border: 1px solid #ddd; border-radius: 8px; margin-top: 10px;") {
    h3(style = "color: #409eff; margin: 0 0 10px 0;") { "OVS 计数器组件" }
    p(style = "font-size: 18px; margin: 10px 0;") { `当前值: ${count.value}` }
    button(
      onClick = increment,
      style = "padding: 8px 16px; background: #67c23a; color: white; border: none; border-radius: 4px; cursor: pointer;"
    ) { "增加" }
  }
}

export { Counter }
