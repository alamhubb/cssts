{
	"name": "language-plugin-testts",
	"version": "1.0.0",
	"type": "module",
	"description": "Vue Language Plugin for TestTS - 纯 TypeScript 1:1 映射测试插件",
	"license": "MIT",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch"
	},
	"dependencies": {
		"glogjs": "^0.1.0"
	},
	"devDependencies": {
		"@types/node": "^22.10.4",
		"@vue/language-core": "^3.2.2",
		"tsdown": "^0.20.0-beta.3",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@vue/language-core": "^3.0.0"
	}
}
